  "responsive_design": {
    "breakpoints": {
      "mobile": "< 640px",
      "tablet": "640px - 1024px",
      "desktop": "> 1024px"
    },
    "mobile_first": "Design for mobile, enhance for desktop",
    "touch_targets": "Minimum 44px for buttons on mobile",
    "stack_columns": "2-column layouts become 1-column on mobile"
  },

  "brand_voice": {
    "tone": "Professional, approachable, solution-oriented",
    "language": "Clear, direct Portuguese (BR), avoid jargon",
    "headlines": "Benefit-driven, address pain points",
    "cta_copy": "Action-oriented, clear value (e.g., 'Teste Grátis', 'Falar com Especialista')"
  },

  "anti_ai_techniques": {
    "imperfections": "Slightly asymmetric spacing (intentional), varied padding",
